{% extends 'base.html.twig' %}

{% block pageHeader %}
    {{ knp_menu_render('AppBundle:Builder:documentLogMenu') }}    
{% endblock %}

{% block body %}

    <br>

    <form action="{{ path('document_tracker_search') }}">
        <input type="text" name="searchTerms" placeholder="Search...">
    </form>

    <br>

    <table class="list">
        <thead>
            <tr>
                <th>Order Number</th>
                <th>User</th>
                <th>Action</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {% for scan in scans %}
                <tr>
                    <td>{{ scan.orderNumber }}</td>
                    <td>{{ scan.user }}</td>
                    <td>{{ scan.documentAction }}</td>
                    <td>{{ scan.timestamp|date('D, d M Y h:i:s a') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
